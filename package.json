{
  "name": "rss-o-bot",
  "version": "1.0.0-rc.0",
  "description": "A FOSS RSS Bot alternative",
  "main": "dist",
  "bin": "dist/cli.js",
  "man": "dist/docs/rss-o-bot.1",
  "scripts": {
    "build": "npm run build-js && ./dist/cli.js build-man --config=tests/config/succeeding",
    "build-js": "babel --presets babel-preset-es2015 src --out-dir dist",
    "build-tests": "babel --presets babel-preset-es2015 tests/src --out-dir tests/dist",
    "watch-build-tests": "watch 'npm run build-tests' tests/src",
    "watch-build": "watch 'npm run build-js -- --source-maps' src",
    "test": "npm run build-tests && RSS_O_BOT_TESTING_MODE=1 ava tests/dist/*.js",
    "watch-test": "RSS_O_BOT_TESTING_MODE=1 ava tests/src/*.js --watch",
    "ci-test": "npm run build && npm run test && standard && npm run test-coverage",
    "debug-test": "DEBUG=rss-o-bot RSS_O_BOT_TESTING_MODE=1 ava",
    "test-coverage": "nyc --include dist/ npm test && nyc report --reporter=text-lcov | coveralls",
    "build-deps-graph": "madge -i ./src/docs/dependency-graph.svg src"
  },
  "repository": "https://github.com/Kriegslustig/rss-o-bot.git",
  "author": "Kriegslustig <npm@ls7.ch>",
  "license": "MIT",
  "dependencies": {
    "debug": "^2.2.0",
    "feedparser": "^1.1.4",
    "immutable": "^3.8.1",
    "jsonwebtoken": "^7.0.0",
    "marked-man": "^0.1.5",
    "moment": "^2.13.0",
    "node-uuid": "^1.4.7",
    "ramda": "^0.22.1",
    "rx": "^4.1.0",
    "sax": "^1.2.1",
    "sequelize": "^3.23.3",
    "sqlite3": "^3.1.4",
    "xml": "^1.0.1"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "coveralls": "^2.11.9",
    "nyc": "^7.0.0",
    "standard": "^8.0.0",
    "watch": "^0.18.0"
  },
  "peerDependencies": {
    "rss-o-bot-telegram": "0.1.x",
    "rss-o-bot-desktop": "0.1.x",
    "rss-o-bot-email": "0.1.x"
  }
}
